{
  "functions": [
    {
      "source": "functions",
      "codebase": "default"
    },
    {
      "source": "first_codebase",
      "codebase": "first_codebase",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [ {
    "target": "frontend",
    "public": "frontend/dist"
  }
]
}
